<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.nunbub.memo.post.dao.PostDAO">
  
  	<insert id="insertPost" parameterType="map">
  		INSERT INTO
  			`post`
  		(
  			`userId`
  			, `subject`
  			, `content`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		)	
  		VALUES
  		(
  			#{userId}
  			, #{title}
  			, #{content}
  			, #{imagePath}
  			, now()
  			, now()
  		)
  	</insert>
  	
  	<select id="selectPostList" parameterType="int" resultType="com.nunbub.memo.post.model.Post">
  		SELECT
  			`id`
  			, `userId`
  			, `subject`
  			, `content`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		WHERE
  			`userId` = #{userId}	
  		ORDER BY
  			`id` DESC	
  	
  	</select>
  	
  	<select id="selectPost" parameterType="int" resultType="com.nunbub.memo.post.model.Post">
  		SELECT
  			`id`
  			, `userId`
  			, `subject`
  			, `content`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`post`
  		WHERE
  			`id` = #{id}	
  	
  	</select>
  
  </mapper>